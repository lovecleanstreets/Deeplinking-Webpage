@model Webfront.ViewModels.HomeViewModel

@{
    ViewBag.Title = "Home Page";
}

<div class="panel panel-default">
    <div class="panel-heading">Category Deep Linking Generation</div>
    <div class="panel-body">
        <div class="form-group">
            @Html.LabelFor(m => m.DeploymentDomains, new { @class = "form-label" })
            @Html.DropDownListFor(m => m.DeploymentDomains, Model.DeploymentDomains, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <input type="button" id="GenerateAll" value="Generate All" class="form-control btn btn-success" />
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Categories, new { @class = "form-label" })
            @Html.DropDownListFor(m => m.Categories, Model.Categories, new { @class = "form-control" })
        </div>

        <div class="btn-group btn-group-justified">
            <a id="Generate" class="form-control btn btn-success">Generate</a>
            <a id="TestNow" class="form-control btn btn-danger">Test Now</a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <textarea id="GeneratedLinks"></textarea>
    </div>
</div>

@section scripts{
    <script src="~/Scripts/DeepLinkingUI.js"></script>    
}